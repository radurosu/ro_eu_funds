<%= javascript_include_tag "http://code.highcharts.com/highcharts.js" %>
<br/>
<div id="container<%=crt%>" style="width:100%; height:400px;"></div>
<script>
$(function () { 
    var chart1 = Highcharts.chart('container<%=crt%>', {
        chart: {
            type: 'column'
        },
        title: {
            text: '<%=title%>'
        },
        plotOptions: {
            bar: {
                dataLabels: {
                    enabled: true
                }
            }
        },
        xAxis: {
            categories: <%= raw categories%>,
            crosshair: true
        },
        yAxis: {
            min: 0,
            title: {
                text: 'Valoare'
            }
        },
        
        legend: {
            layout: 'horizontal',
            align: 'right',
            verticalAlign: 'top',
            x: -40,
            y: 80,
            floating: true,
            borderWidth: 1,
            backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
            shadow: true
        },
        series: [{
            colorByPoint: true,
            data: <%=raw contracts %>
        }]
    }
    );
});
</script>